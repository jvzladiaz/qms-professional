# Production Environment Variables for Vercel
# Replace these values with your actual Supabase credentials

# Server Configuration
NODE_ENV=production
PORT=3001

# Database Configuration (from Supabase)
DATABASE_URL="postgresql://postgres:[YOUR_PASSWORD]@[YOUR_PROJECT_REF].supabase.co:5432/postgres"

# JWT Configuration
JWT_SECRET=your-super-secret-production-jwt-key-change-this
JWT_EXPIRES_IN=7d

# Encryption
BCRYPT_SALT_ROUNDS=12

# CORS Configuration
ALLOWED_ORIGINS="https://your-app-domain.vercel.app"

# Logging
LOG_LEVEL=info
LOG_FILE=logs/qms.log

# Feature Flags (Enable all Phase 5 features)
ENABLE_PDF_GENERATION=true
ENABLE_EXCEL_EXPORT=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_WEBSOCKETS=true

# Frontend URL
FRONTEND_URL="https://your-app-domain.vercel.app"